    "gpt-tokenizer": "^3.2.0",
    "image-size": "^2.0.2",
    "sharp": "^0.33.0",
    "is-in-ci": "^2.0.0",
    "isbinaryfile": "^5.0.6",
    "jsdom": "^26.1.0",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
